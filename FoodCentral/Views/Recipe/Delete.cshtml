@model FoodCentral.Models.Recipe

@{
    ViewData["Title"] = "Delete Recipe";
}

<h2>Delete Recipe</h2>

<h3>Are you sure you want to delete this recipe?</h3>
<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Meal Type</dt>
        <dd class="col-sm-10">@Model.MealType</dd>

        <dt class="col-sm-2">Vegetarian</dt>
        <dd class="col-sm-10">@Model.IsVegetarian</dd>

        <dt class="col-sm-2">Instructions</dt>
        <dd class="col-sm-10">@Model.Instructions</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
